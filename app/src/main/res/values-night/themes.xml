<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WATERMYPLANTS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#398378</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Dark Mode-->
    <!--Screen Background if dark mode on-->
    <style name="SCREEN">
        <item name="android:background">#0F0F0F</item>
    </style>
    <!--Text background if dark mode on-->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Text2 background if dark mode on-->
    <style name="TEXT2">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Button background if dark mode on-->
    <style name="BUTTON">
        <item name="android:background">#398378</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Card color if dark mode on-->
    <style name="CARD">
        <item name="android:background">#3E3E3E</item>
    </style>
    <!--Bottom nav bar if dark mode on -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="backgroundTint">@color/teal</item>
    </style>
    <!--Today's Date and Time text view if light mode on -->
    <style name="DateTime">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>