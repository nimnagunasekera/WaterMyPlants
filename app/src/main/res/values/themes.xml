<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WATERMYPLANTS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors. -->
        <item name="colorPrimary">#398378</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">#F4F4F4</item>
        <item name="colorTertiary">@color/black</item>
        <item name="colorSecondaryVariant">#0F0F0F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#F1F1F1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WATERMYPLANTS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WATERMYPLANTS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WATERMYPLANTS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Light Mode-->
    <!--Screen Background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">@color/off_white</item>
    </style>
    <!--Text background if light mode on-->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Text2 background if light mode on-->
    <style name="TEXT2">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Button background if light mode on-->
    <style name="BUTTON">
        <item name="android:background">#398378</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Card color if light mode on-->
    <style name="CARD">
        <item name="android:background">#FFFFFF</item>
    </style>
    <!--Bottom nav bar if light mode on -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/off_white</item>
        <item name="itemTextColor">@color/off_white</item>
        <item name="backgroundTint">@color/teal</item>
    </style>
    <!--Today's Date and Time text view if light mode on -->
    <style name="DateTime">
        <item name="android:textColor">@color/white</item>
    </style>



</resources>